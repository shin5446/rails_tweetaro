<p id="notice"><%= notice %></p>

<h1>あなたのつぶやき</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to '確認する', tweet %></td>
        <td><%= link_to '編集する', edit_tweet_path(tweet) %></td>
        <td><%= link_to '削除する', tweet, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規ツイート', new_tweet_path %>
