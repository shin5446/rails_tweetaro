<%= form_with(model: tweet, local: true,url: choose_new_or_edit ) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "件のエラーがあります！") %> </h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :tweet_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
